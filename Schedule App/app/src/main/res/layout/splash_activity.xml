<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_futuristic_launch">  <!-- Your sticky-note background -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Focus Ritual\nScheduler"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:shadowColor="#f5bf03"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:layout_centerInParent="true" />  <!-- This line centers it perfectly -->

</RelativeLayout>